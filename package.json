{
    "name": "@mkody/twitch-emoticons",
    "version": "3.0.0-beta.1",
    "description": "Gets Twitch, BTTV, FFZ and 7TV emotes as well as parsing text to emotes!",
    "type": "module",
    "main": "src/index.js",
    "typings": "typings/index.d.ts",
    "keywords": [
        "7tv",
        "bettertwitchtv",
        "bttv",
        "emotes",
        "emoticons",
        "ffz",
        "frankerfacez",
        "parse",
        "seventv",
        "twitch-api",
        "twitch"
    ],
    "author": "MKody <gh@kdy.ch> (AndrÃ© Fernandes)",
    "contributors": [
        "1Computer",
        "Killusions",
        "MKody",
        "Tzahi12345"
    ],
    "license": "MIT",
    "dependencies": {
        "@twurple/api": "^8.0.3",
        "@twurple/auth": "^8.0.3"
    },
    "devDependencies": {
        "@microsoft/eslint-formatter-sarif": "^3.1.0",
        "@typescript-eslint/parser": "^8.53.1",
        "cross-env": "^10.1.0",
        "docdash": "^2.0.2",
        "esbuild": "^0.27.2",
        "eslint": "^9.39.2",
        "eslint-plugin-jsdoc": "^62.3.0",
        "jest": "^30.2.0",
        "jsdoc": "^4.0.5",
        "neostandard": "^0.12.2"
    },
    "scripts": {
        "all": "pnpm run lint && pnpm run test && pnpm run build && pnpm run docs",
        "build": "esbuild ./src/index.js --bundle --minify --keep-names --sourcemap --format=esm --outfile=./dist/TwitchEmoticons.min.js",
        "docs": "jsdoc --configure .jsdoc.json",
        "lint": "eslint .",
        "test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mkody/twitch-emoticons.git"
    },
    "bugs": {
        "url": "https://github.com/mkody/twitch-emoticons/issues"
    },
    "homepage": "https://github.com/mkody/twitch-emoticons",
    "directories": {
        "doc": "docs",
        "test": "test"
    },
    "engines": {
        "node": ">=20.19.0",
        "pnpm": ">=10"
    },
    "packageManager": "pnpm@10.28.1",
    "pnpm": {
        "onlyBuiltDependencies": [
            "esbuild",
            "unrs-resolver"
        ]
    }
